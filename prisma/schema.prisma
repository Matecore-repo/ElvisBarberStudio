// Modelo simplificado para Planilla Digital de Caja y Comisiones

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  name         String?
  passwordHash String?
  role         String @default("barber") // admin, owner, barber
  staffId      String?

  @@map("users")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  createdAt DateTime @default(now()) @map("created_at")

  sales Sale[]

  @@map("customers")
}

model Staff {
  id                     String  @id @default(cuid())
  name                   String
  commissionRateDefault  Float   @default(0.4) @map("commission_rate_default")
  active                 Boolean @default(true)
  createdAt              DateTime @default(now()) @map("created_at")

  sales              Sale[]
  commissionPayments CommissionPayment[]

  @@map("staff")
}

model Sale {
  id             String   @id @default(cuid())
  dateTime       DateTime @default(now()) @map("date_time") // Mantener por compatibilidad, pero usar date/time
  date           DateTime? @db.Date // Fecha del turno (sin hora)
  time           String?  // Hora del turno (HH:mm)
  status         String   @default("SCHEDULED") // SCHEDULED, COMPLETED, CANCELED
  customerId     String?  @map("customer_id")
  staffId        String   @map("staff_id")
  paymentMethod  String?  @map("payment_method") // Puede ser null si es turno futuro
  totalAmount    Decimal  @map("total_amount") @db.Decimal(10, 2)
  servicesText   String   @map("services_text")
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at")

  customer Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  staff    Staff     @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@map("sales")
}

model CashClosing {
  id             String   @id @default(cuid())
  date           DateTime @unique @db.Date
  cashTotal      Decimal  @map("cash_total") @db.Decimal(10, 2)
  mpTotal        Decimal  @map("mp_total") @db.Decimal(10, 2)
  expensesTotal  Decimal  @map("expenses_total") @db.Decimal(10, 2)
  cashFinal      Decimal  @map("cash_final") @db.Decimal(10, 2)
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("cash_closings")
}

model CommissionPayment {
  id          String   @id @default(cuid())
  staffId     String   @map("staff_id")
  periodStart DateTime @map("period_start")
  periodEnd   DateTime @map("period_end")
  totalSales  Decimal  @map("total_sales") @db.Decimal(10, 2)
  commissionRate Float @map("commission_rate")
  commissionAmount Decimal @map("commission_amount") @db.Decimal(10, 2)
  status      String   @default("PENDING")
  paidAt      DateTime? @map("paid_at")
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")

  staff Staff @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@map("commission_payments")
}

